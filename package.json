{
  "name": "mint-smm",
  "version": "1.0.0",
  "description": "landing-mint",
  "main": "y/index.html",
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o y/assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace y/assets/css/starter.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css y/assets/css/starter.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output y/assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "server": "serve --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oldstud/mint-smm.git"
  },
  "keywords": [
    "smm"
  ],
  "author": "Pushkin Dmytro",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oldstud/mint-smm/issues"
  },
  "homepage": "https://github.com/oldstud/mint-smm#readme",
  "dependencies": {
 
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "serve": "^11.3.2",
    "stylelint": "^13.12.0",
    "stylelint-config-twbs-bootstrap": "^2.1.0"
  }
}
